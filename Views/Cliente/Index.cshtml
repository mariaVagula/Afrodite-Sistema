@model IEnumerable<Afrodite_Sistema.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

<p>
    <a asp-action="Create" class="cadastrar">Cadastrar</a>
</p>
<div>
    @using (Html.BeginForm("Index", "Cliente", FormMethod.Get))
    {
        <p>
            Digite aqui sua pesquisa: <input type="text" id="pesquisa" name="pesquisa" class="txtpesquisa"/>
            <input type="submit" value="Pesquisar" class="botao-pesquisar"/>
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Sexo
            </th>
            <th>
                Cpf
            </th>
            <th>
                Telefone
            </th>
            <th>
                Email
            </th>
            <th>
                Senha
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimentoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SexoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenhaCliente)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-primary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-segundo">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
