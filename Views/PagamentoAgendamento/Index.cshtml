@model IEnumerable<Afrodite_Sistema.Models.PagamentoAgendamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Pagamento do Agendamento</h1>

<p>
    <a asp-action="Create" class="cadastrar">Cadastrar Pagamento do Agendamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cód. Agendamento
            </th>
            <th>
                Cliente
            </th>
            <th>
                Profissional
            </th>
            <th>
                Procedimento
            </th>
            <th>
                Data do Agendamento
            </th>
            <th>
                Forma de Pagamento
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Agendamento.AgendamentoId)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Agendamento.Cliente.NomeCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Agendamento.Profissional.NomeProfissional)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Agendamento.Procedimento.NomeProcedimento)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Agendamento.DataHoraAgendamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormaPagamento.NomeFormaPagamento)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PagamentoAgendamentoId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.PagamentoAgendamentoId" class="btn btn-primary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.PagamentoAgendamentoId" class="btn btn-segundo">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
