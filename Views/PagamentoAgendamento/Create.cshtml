@model Afrodite_Sistema.Models.PagamentoAgendamento

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Pagamento do Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AgendamentoId" class="control-label">Agendamento</label>
                <select asp-for="AgendamentoId" class ="form-control" asp-items="ViewBag.AgendamentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamentoId" class="control-label">Forma de Pagamento</label>
                <select asp-for="FormaPagamentoId" class ="form-control" asp-items="ViewBag.FormaPagamentoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
