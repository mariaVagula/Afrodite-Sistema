@model Afrodite_Sistema.Models.PagamentoAgendamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Pagamento do Agendamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Agendamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Agendamento.AgendamentoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento.NomeFormaPagamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PagamentoAgendamentoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
    </form>
</div>
