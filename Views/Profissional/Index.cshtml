@model IEnumerable<Afrodite_Sistema.Models.Profissional>

@{
    ViewData["Title"] = "Index";
}

<h1>Profissional</h1>

<p>
    <a asp-action="Create"class="cadastrar">Cadastrar Profissional</a>
</p>
<div>
    @using (Html.BeginForm("Index", "Profissional", FormMethod.Get))
    {
        <p>
            Digite aqui sua pesquisa: <input type="text" id="pesquisa" name="pesquisa" class="txtpesquisa" />
            <input type="submit" value="Pesquisar" class="botao-pesquisar" />
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProfissional)
            </th>
            <th>
                Tipo Profissional
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProfissional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProfissional.NomeTipoProfissional)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProfissionalId" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.ProfissionalId" class="btn btn-primary">Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.ProfissionalId" class="btn btn-segundo">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
