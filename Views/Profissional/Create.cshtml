@model Afrodite_Sistema.Models.Profissional

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Profissional</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeProfissional" class="control-label"></label>
                <input asp-for="NomeProfissional" class="form-control" />
                <span asp-validation-for="NomeProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProfissionalId" class="control-label">Tipo do Profissional</label>
                <select asp-for="TipoProfissionalId" class ="form-control" asp-items="ViewBag.TipoProfissionalId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
