@model IEnumerable<Afrodite_Sistema.Models.FormaPagamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Forma do Pagamento</h1>

<p>
    <a asp-action="Create">Cadastrar Forma do Pagamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFormaPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFormaPagamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FormaPagamentoId">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.FormaPagamentoId">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.FormaPagamentoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
