@model IEnumerable<Afrodite_Sistema.Models.TipoPlano>

@{
    ViewData["Title"] = "Index";
}

<h1>Tipo Plano</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeTipoPlano)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeTipoPlano)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoPlanoId">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.TipoPlanoId">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.TipoPlanoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
