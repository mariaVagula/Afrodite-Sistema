@model Afrodite_Sistema.Models.Clube

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Clube</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeClube)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeClube)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoClube)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.FotoClube)" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoClube)
            Tipo do Clube
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoClube.NomeTipoClube)
        </dd>
        <dt class = "col-sm-2">
            Tipo do Plano
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoPlano.NomeTipoPlano)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DetalhesClube)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetalhesClube)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorClube)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorClube)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClubeId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index"class="btn btn-primary">Voltar à Lista</a>
    </form>
</div>
