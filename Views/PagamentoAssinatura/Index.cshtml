@model IEnumerable<Afrodite_Sistema.Models.PagamentoAssinatura>

@{
    ViewData["Title"] = "Index";
}

<h1>Pagamento da Assinatura</h1>

<p>
    <a asp-action="Create" class="cadastrar">Cadastrar Pagamento Da Assinatura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Cliente
            </th>
            <th>
               Clube
            </th>
            <th>
                Forma de Pagamento
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssinaturaClube.Cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssinaturaClube.Clube.NomeClube)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamento.NomeFormaPagamento)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PagamentoAssinaturaId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.PagamentoAssinaturaId" class="btn btn-primary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.PagamentoAssinaturaId" class="btn btn-segundo">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
